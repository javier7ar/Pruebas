<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.xavier.pruebas.TakeSampleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activityBar_height"
        android:paddingBottom="@dimen/activityBar_vertical_padding"
        android:paddingLeft="@dimen/activityBar_horizontal_padding"
        android:paddingRight="@dimen/activityBar_horizontal_padding"
        android:paddingTop="@dimen/activityBar_vertical_padding"
        android:background="@color/activityBar_background"
        >

        <TextView
            android:id="@+id/lb_desc_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Muestra: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/activityBar_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lb_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/lb_desc_cliente"
            android:layout_toEndOf="@+id/lb_desc_cliente"
            android:text="......"
            android:textColor="@color/activityBar_text"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/img_cliente"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="Foto Cliente"
            />

        <TextView
            android:id="@+id/lb_estado_oper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/img_cliente"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/img_cliente"
            android:layout_toStartOf="@+id/img_cliente"
            android:textColor="@color/activityBar_text"
            android:textSize="35sp"
            android:text="1/3"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

</LinearLayout>